<UserControl x:Class="CrilieContactBook.Views.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrilieContactBook.Views"
             xmlns:vm="clr-namespace:CrilieContactBook.ViewModels"
             xmlns:views="clr-namespace:CrilieContactBook.Views"
             mc:Ignorable="d" 
             d:DesignHeight="410" d:DesignWidth="800" Background="RosyBrown">
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="230">
            <ListView x:Name="lstvContacts" ItemsSource="{Binding ContactsList, UpdateSourceTrigger=PropertyChanged,Mode=OneWay}" SelectedItem="{Binding SelectedContact,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Style="{StaticResource ContactInfoDisplayStyles}" Text="{Binding FullName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid DockPanel.Dock="Right">
            <ContentControl Content="{Binding SelectedContactView}"/>
        </Grid>
    </DockPanel>
</UserControl>
